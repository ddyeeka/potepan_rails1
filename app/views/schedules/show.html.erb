<%= render "shared/partial" %>

<div>
  <ul>
    <li><%= link_to "一覧に戻る", :schedules %></li>
  </ul>
</div>

<div>
  <p><%= link_to "編集", [:edit, @schedule] %></p>
  <p class="title"><%= @schedule.title %></p>  
</div>

<table>
  <tr>
    <th>開始日</th>
    <td><%= @schedule.startDay %></td>
  </tr>
  <tr>
    <th>終了日</th>
    <td><%= @schedule.finishDay %></td>
  </tr>
  <tr>
    <th>終日</th>
    <td>
      <% if @schedule.allDay %> ○ <% end %>
    </td>
  </tr>
  <tr>
    <th>スケジュールメモ</th>
  <td><%= @schedule.memo %></td>
</tr>
</table>

